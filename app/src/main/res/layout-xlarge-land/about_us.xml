
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="@color/white"
        tools:context="com.example.iicceey.alphasiahelperver2.RecordInfo"
        android:id="@+id/page">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSkip"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="45dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ผู้พัฒนา"
            android:id="@+id/textPatientInfo"
            android:textColor='@color/black'
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. นางสาว ปาลิตา ทองสมบูรณ์ "
            android:id="@+id/FNamePatient"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textPatientInfo" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. นางสาว นภสร ศศิโภคา "
            android:id="@+id/LNamePatient"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/FNamePatient"
            android:layout_centerHorizontal="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. นาย ปริญญา ศรีสวัสดิ์เกตุ "
            android:id="@+id/NNamePatient"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/LNamePatient"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />



        <TextView
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:id="@+id/txtGenderPatient"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:layout_alignTop="@+id/GenderPatient"
            android:layout_toRightOf="@+id/textViewHospitalName"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ที่ปรึกษา"
            android:id="@+id/textViewCarerInfo"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/NNamePatient"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. ผศ.ดร. สุดสงวน งามสุริยโรจน์ "
            android:id="@+id/FNameCarer"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/textViewCarerInfo"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. ดร.นายแพทย์ ปรเมษฐ์ ฉายารัตนศิลป์"
            android:id="@+id/textViewLNameCarer"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/FNameCarer"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="คณะเทคโนโลยีสารสนเทศและการสื่อสาร มหาวิทยาลัย มหิดล"
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_below="@+id/imageView3" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/imageView3"
            android:src="@drawable/logo_mahidol"
            android:scaleType="fitCenter"
            android:layout_below="@+id/btnSkip"
            android:layout_toStartOf="@+id/btnSkip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/imageView4"
            android:src="@drawable/logo_ict"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/btnSkip" />



    </RelativeLayout>
</ScrollView>