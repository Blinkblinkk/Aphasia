<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.iicceey.alphasiahelperver2.SplashScreen">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageViewLogo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo_copy"
        android:scaleType="fitCenter"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AphasiaTalk"
        android:id="@+id/textViewAphasia"
        android:textSize="80dp"
        android:textColor="#38ACEC"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageViewLogo"
        android:layout_alignLeft="@+id/textViewTalk"
        android:layout_alignStart="@+id/textViewTalk"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helper"
        android:id="@+id/textViewTalk"
        android:textSize="80dp"
        android:textColor="#3090C7"
        android:textStyle="bold"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/textViewAphasia"
        android:layout_toRightOf="@+id/imageViewLogo"
        android:layout_toEndOf="@+id/imageViewLogo"/>

</RelativeLayout>
